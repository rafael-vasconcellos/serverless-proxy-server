{
  "compilerOptions": { 
    "target": "es2021",                              
    "jsx": "preserve",                            
    "jsxImportSource": "solid-js",                        
    "module": "nodenext", 
    /* "moduleResolution": "classic", */
    "esModuleInterop": true,                         
    "forceConsistentCasingInFileNames": true,        
    "strict": true,                                  
    "skipLibCheck": true, 
    "outDir": "dist",
    "allowJs": true
  },

  "exclude": ["public", "dist", "test", "netlify"]
}
